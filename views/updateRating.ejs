<!DOCTYPE html>
<html lang="en">
		<%- include("./partials/head.ejs")  %>

<body>
	<%- include("./partials/nav.ejs")  %>
		<h2>Update Review</h2>
		<div class="mt-2">
		<form method="POST" action="/updateRating" >
			<input name="ratingID" type = "hidden" value="<%= ratingInfo.ratingID %>">
			<h3><%- ratingInfo.title %></h3>
			<img src="<%= ratingInfo.poster%>">
			<br>
			<textarea class="mt-3" name="reviewDescription" required><%= ratingInfo.reviewDescription%></textarea> <br>
			
			Rating: <input type="number" name="rating" min="1" max="5" value="<%=ratingInfo.rating%>"><br>
			Would you recommend?: 
			<input type="checkbox" name="recommend" <%= ratingInfo.recommend ? 'checked' : '' %>>
			<button class="mt-2">Update</button>
		</form>
		</div>
	<%- include("./partials/footer.ejs")  %>
</body>